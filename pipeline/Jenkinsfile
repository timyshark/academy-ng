pipeline {
  agent any
  stages {
    stage('Prepare') {
      steps {
        echo 'Preparation Started'
        git(url: 'https://github.com/timyshark/academy-ng', branch: 'app-alpha-001')
        bat(script: 'npm --version', label: 'Node JS Version')
        bat 'npm install'
      }
    }

    stage('Build') {
      steps {
        bat 'npm install -g @angular/cli'
        bat(script: 'ng build', label: 'Building Academy Vue')
      }
    }

  }
}